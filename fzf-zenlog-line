#!/bin/bash

# Select lines, 

set -e
. mutil.sh

remove_cr_lines() {
    perl -pe 's# (^ | (?<= [ \r \n ] )) [^\r\n]* \r (?! \n )  ##xg; s!\r\n!\n!xg  '
}

#actual="$(echo -n $'xxx\r\nBBB\rccc\r\nDDD\rEEE\rfff\r\n' | remove_cr_lines)" && echo "$actual" | hd

#exit 9

# Select the line
line="$( 
    zenlog-last-n-contents -r -n 20 |
    remove_cr_lines |
    tac |
    fzf -m --ansi
)"

if [[ "$line" == "" ]] ; then
    exit 1
fi

tokenize() {
    local line="$1"
    {
        split="$( perl -ne '
#line 31

# Split by space and print in each line
s!\s+!\n!g and print $_;

# EE command line
s!^Running: !! && print;
' <<<"$line" )"
        if [[ "$line" != "$split" ]]; then
            echo "$split"
            gray -f -- '--------'
        fi

        # Whole line(s)
        echo "$line"
    } | grep -v '^$' | fzf --ansi -1 -m --tac | tr -s '\n' ' '
}


echo "$( tokenize "$line" )"
