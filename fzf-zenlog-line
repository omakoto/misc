#!/bin/bash

# Select lines, 

set -e
. mutil.sh

# Select the line
line="$( 
    zenlog-last-n-contents -r -n 20 |
    cr-lines-remove |
    tac |
    fzf -m --ansi |
    perl -pe 's/^\s+//'
)"

if [[ "$line" == "" ]] ; then
    exit 1
fi

tokenize() {
    local line="$1"

    # Remove unnecessary line start tokens
    line="$( perl -pe '
#line 33

s!^Running: !!; # EE marker

s!^ \$\s+ !!x; # Prompt 

' <<<"$line" )"

    {
        split="$( perl -ne '
#line 43

$orig = $_;

# Remove "obvious" line start tokens
s!^ ([a-zA-Z]|\?\?) \s+ !!x; #git markers

# Split by space and print in each line
$a = s!\s+!\n!gr and print $a;

' <<<"$line" )"
        if [[ "$split" != "" ]] && [[ "$line" != "$split" ]] ; then
            echo "$split"
            gray -f -- '--------'
        fi

        # Whole line(s)
        echo "$line"
    } | grep -v '^$' | fzf --ansi -1 -m --tac | tr -s '\n' ' '
}


echo "$( tokenize "$line" )"
