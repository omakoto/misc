#!/bin/bash

# Select lines, 

set -e

remove_cr_lines() {
    perl -pe 's# (^ | (?<= [ \r \n ] )) [^\r\n]* \r (?! \n )  ##xg; s!\r\n!\n!xg  '
}

#actual="$(echo -n $'xxx\r\nBBB\rccc\r\nDDD\rEEE\rfff\r\n' | remove_cr_lines)" && echo "$actual" | hd

#exit 9

# Select the line
line="$( 
    zenlog-last-n-contents -r -n 10 |
    remove_cr_lines |
    tac |
    fzf -m --ansi
)"

if [[ "$line" == "" ]] ; then
    exit 1
fi

tokenize() {
    local line="$1"
    {
        # Each token
        echo "$line" | perl -pe 's!\s+!\n!g'

        # Special case: "Running: "...
        echo "$line" | sed -ne 's!^Running: !!p'

        # Whole line
        echo "$line"
    } | grep -v '^$' | fzf -1 -m --tac | tr -s '\n' ' '
}


echo "$( tokenize "$line" )"
