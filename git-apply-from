#!/bin/bash

set -e
. mutil.sh

target="$1"
patch=/tmp/$$.patch

if ! [[ -d "$target" ]] ; then
  cat <<'EOF'

 git-apply-from: Apply a patch generated from a given directory

 usage: git-apply-from FROM-DIRECTORY

EOF
  exit 1
fi

(
  ee -2 cd "$target"
  ee -2 git format-patch --stdout HEAD@{u}...HEAD > $patch
)

ee git am --3way $patch

rm -f $patch
