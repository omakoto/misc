#!/bin/bash

# Simple menu builder
#
# Example:
#
# case "$(select-menu '1: Run test only # comment' '2: Run with debugger'" in
#     1)
#         :
#         ;;
#     2)
#         :
#         ;;
#     *)
#         exit 1
# esac

args=()
for i in $(seq 1 9) ; do
    args+=(--bind)
    args+=("$i:pos($i)+accept")
done

# echo "${args[@]}" ; exit 9

(
    IFS=$'\n'
    echo "$*"
) |
hl '#.*$' '@333' |
fzf -1 --ansi "${args[@]}" | sed -e 's/:.*//'
